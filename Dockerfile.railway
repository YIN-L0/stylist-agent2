# Railway Dockerfile - Using Node.js LTS
FROM node:18-bullseye-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files first for better caching
COPY backend/package*.json ./backend/
COPY package*.json ./

# Install backend dependencies (including devDependencies for build)
WORKDIR /app/backend

# Clean npm cache and install dependencies without triggering postinstall
RUN npm cache clean --force
RUN npm ci --include=dev

# Verify TypeScript installation after dependencies are installed
RUN npx tsc --version

# Copy source code and configuration files
WORKDIR /app
COPY backend/ ./backend/
COPY data ./data

# Build the project now that all files are in place
WORKDIR /app/backend
RUN npm run build

# Clean up devDependencies after build for smaller image (optional)
# RUN npm prune --production

# Expose port
EXPOSE 3001

# Start command
CMD ["npm", "start"]