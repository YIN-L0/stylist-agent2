# Simplified Dockerfile for Railway deployment
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY frontend/package*.json ./frontend/
COPY backend/package*.json ./backend/

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build frontend
WORKDIR /app/frontend
RUN npm ci
RUN npm run build

# Build backend
WORKDIR /app/backend
RUN npm ci
RUN npm run build

# Set working directory to backend
WORKDIR /app/backend

# Copy data files to backend directory
COPY data ../data

# Expose port
EXPOSE 3001

# Start the backend server
CMD ["npm", "start"]
