# Railway Dockerfile - Simple approach  
FROM node:18.17.0

WORKDIR /app

# Copy package files first for better caching
COPY backend/package*.json ./backend/
COPY package*.json ./

# Install backend dependencies (including devDependencies for build)
WORKDIR /app/backend
RUN npm install

# Copy source code and data
WORKDIR /app
COPY backend/src ./backend/src
COPY backend/tsconfig.json ./backend/
COPY data ./data

# Build the project
WORKDIR /app/backend
RUN npm run build

# Expose port
EXPOSE 3001

# Start command
CMD ["npm", "start"]
