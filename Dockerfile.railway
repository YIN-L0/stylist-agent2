# Railway Dockerfile - Using Node.js LTS
FROM node:18-bullseye-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files first for better caching
COPY backend/package*.json ./backend/
COPY package*.json ./

# Install backend dependencies (including devDependencies for build)
WORKDIR /app/backend

# Clean npm cache and install with more verbose output
RUN npm cache clean --force
RUN npm install --verbose

# Verify TypeScript installation
RUN npx tsc --version

# Copy source code and data
WORKDIR /app
COPY backend/src ./backend/src
COPY backend/tsconfig.json ./backend/
COPY data ./data

# Build the project with explicit TypeScript path
WORKDIR /app/backend
RUN npx tsc --build

# Clean up devDependencies after build (optional optimization)
# RUN npm prune --production

# Expose port
EXPOSE 3001

# Start command
CMD ["npm", "start"]
