{
  "name": "stylist-agent-backend",
  "version": "1.0.0",
  "description": "Backend API for stylist agent",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "postinstall": "npm run build",
    "db:setup": "ts-node src/scripts/setupDatabase.ts",
    "db:import": "ts-node src/scripts/importData.ts",
    "db:reset": "rm -f database.sqlite && npm run db:setup && npm run db:import"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "sqlite3": "^5.1.6",
    "csv-parse": "^5.5.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.9.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}

